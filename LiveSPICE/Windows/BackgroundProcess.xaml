<Window x:Class="LiveSPICE.BackgroundProcess"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LiveSPICE" Height="100" Width="300" WindowStartupLocation="CenterOwner" Style="{StaticResource ResourceKey=Window}">
    <DockPanel LastChildFill="True" Margin="5">
        <TextBlock DockPanel.Dock="Top" x:Name="task" Text="Working..." />
        <DockPanel DockPanel.Dock="Top" LastChildFill="True" Margin="0 10 0 10" Height="24">
            <Button DockPanel.Dock="Right" x:Name="cancel" Content="Cancel" IsCancel="True" Margin="10 0 0 0"/>
            <ProgressBar x:Name="progress" Minimum="0" Maximum="100" />
        </DockPanel>
    </DockPanel>
</Window>
