<Window x:Class="LiveSPICE.ClosingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LiveSPICE" Height="300" Width="300" 
        Topmost="True" WindowStartupLocation="CenterOwner"
        Background="{StaticResource ResourceKey=Background}">
    <Window.Resources>
        <Style BasedOn="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" TargetType="Button"></Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition Height="*" />
            <RowDefinition Height="32" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Margin="8" VerticalAlignment="Center" Text="Save changes to the following schematics?" />
        <ListView x:Name="files" Grid.Row="1" Margin="4 0 4 0" VerticalAlignment="Stretch" BorderBrush="DarkGray" BorderThickness="1" />
        <DockPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Yes" Width="80" Margin="4" BorderThickness="1" BorderBrush="DarkGray" Click="Yes_Click" IsDefault="True" />
            <Button Content="No" Width="80" Margin="4" BorderThickness="1" BorderBrush="DarkGray" Click="No_Click" />
            <Button Content="Cancel" Width="80" Margin="4" BorderThickness="1" BorderBrush="DarkGray" IsCancel="True" />
        </DockPanel>
    </Grid>
</Window>
